{% extends 'base.html.twig' %}

{% block title %}Réglementations{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4"><i class="bi bi-list-ul me-2"></i> Liste des Réglementations</h1>

        <div class="row">
            {% for regulation in regulations %}
                <div class="col-md-6">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">{{ regulation.title }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ regulation.description }}</p>
                            <ul class="list-group list-group-flush">
                                {% for detail in regulation.details %}
                                    <li class="list-group-item">{{ detail }}</li>
                                {% endfor %}
                            </ul>
                            {# You can add a "Read More" button if needed #}
                            {# <a href="#" class="btn btn-outline-primary mt-3">Lire la suite</a> #}
                        </div>
                    </div>
                </div>
                {% if loop.index % 2 == 0 %}
                    </div><div class="row">
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}