{% extends 'base.html.twig' %}

{% block title %}
    Evaluation Details
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/evaluation_details.css') }}">
{% endblock %}

{% block body %}
    <div class="evaluation-details-container py-5">
        <div class="container">
            <header class="mb-5 text-center">
                <h1 class="display-4 text-primary">
                    <i class="bi bi-file-earmark-text-fill me-3"></i> Evaluation Details
                </h1>
                <p class="lead text-muted">
                    Review the complete information for this evaluation record.
                </p>
            </header>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-header bg-info text-white rounded-top py-3">
                            <i class="bi bi-building me-2"></i> {{ evaluation.company.name }}
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">Evaluation Date:</label>
                                <div class="col-sm-8">
                                    <span class="form-control-plaintext">{{ evaluation.evaluationDate|date('Y-m-d H:i:s') }}</span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">Overall Score:</label>
                                <div class="col-sm-8">
                                    <span class="form-control-plaintext h5"><span class="badge bg-primary">{{ evaluation.overallScore }}</span></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">Status:</label>
                                <div class="col-sm-8">
                                    <span class="form-control-plaintext">
                                        {% if evaluation.status == 'Pending' %}
                                            <span class="badge bg-warning">{{ evaluation.status }}</span>
                                        {% elseif evaluation.status == 'Completed' %}
                                            <span class="badge bg-success">{{ evaluation.status }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ evaluation.status }}</span>
                                        {% endif %}
                                    </span>
                                </div>
                            </div>

                            <div class="mt-4 d-flex justify-content-end gap-2">
                                <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}" class="btn btn-warning rounded-pill">
                                    <i class="bi bi-pencil-fill me-2"></i> Edit
                                </a>
                                <a href="{{ path('evaluation_index') }}" class="btn btn-outline-secondary rounded-pill">
                                    <i class="bi bi-arrow-left me-2"></i> Back to List
                                </a>
                            </div>
                        </div>
                        <div class="card-footer bg-light py-3 text-muted text-center small">
                            <i class="bi bi-clock-history me-2"></i> Evaluation record created on {{ evaluation.evaluationDate|date('Y-m-d') }}.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Optional: Add any specific JavaScript for this page
    </script>
{% endblock %}